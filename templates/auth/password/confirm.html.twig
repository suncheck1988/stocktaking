{% block body %}

    <p style="margin: 0 0 10px 0">Для сброса пароля перейдите по ссылке:</p>

    {% set url = frontend_url('auth/reset-password/confirm', {'token': token} ) %}
    <p style="margin: 0"><a style="color: #1a8aee; text-decoration: none" href="{{ url }}"><span style="color: #1a8aee; text-decoration: underline">{{ url }}</span></a></p>

{% endblock %}
